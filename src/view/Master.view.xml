<mvc:View
	controllerName="sap.ui.demo.masterdetail.controller.Master"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
	<Page
		id="page"
		title="{view>/masterListTitle}">
		<subHeader>
			<Bar id="headerBar">
				<contentMiddle>
					<SearchField
						id="searchField"
						showRefreshButton="{= !${device>/support/touch} }"
						tooltip="{i18n>masterSearchTooltip}"
						width="100%"
						search="onSearch">
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<content>
			<PullToRefresh
				id="pullToRefresh"
				visible="{device>/support/touch}"
				refresh="onRefresh" />
			<!-- For client side filtering add this to the items attribute:  parameters: {operationMode: 'Client'}}" -->
			<List
				id="list"
				items="{
					path: '/Objects',
					sorter: {
						path: 'Name',
						descending: false
						},
					groupHeaderFactory: '.createGroupHeader'
				}"
				busyIndicatorDelay="0"
				mode="{
					path: 'device>/system/phone',
					formatter: '.formatter.listMode'
				}"
				growing="true"
				growingThreshold="10"
				growingScrollToLoad="true"
				updateFinished="onUpdateFinished"
				select="onSelect"
				noDataText="{view>/masterListNoDataText}">
				<infoToolbar>
					<Toolbar
						active="true"
						id="filterBar"
						visible="{view>/isFilterBarVisible}"
						press="onOpenViewSettings">
						<Label
							id="filterBarLabel"
							text="{view>/filterBarLabel}" />
					</Toolbar>
				</infoToolbar>
				<items>
					<ObjectListItem
						type="{
							path: 'device>/system/phone',
							formatter: '.formatter.listItemType'
						}"
						press="onSelect"
						title="{Name}"
						number="{
							path: 'UnitNumber',
							formatter: '.formatter.currencyValue'
						}"
						numberUnit="{UnitOfMeasure}">
					</ObjectListItem>
				</items>
			</List>
		</content>
		<footer>
			<OverflowToolbar
				id="footerBar">
				<ToolbarSpacer/>
				<!-- simple sort/group/filter with Select controls -->
				<Select
					id="sortSelect"
					type="IconOnly"
					icon="sap-icon://sort"
					autoAdjustWidth="true"
					change="onSort">
					<core:Item
						id="masterSort1"
						key="Name"
						text="{i18n>masterSort1}"/>
					<core:Item
						id="masterSort2"
						key="UnitNumber"
						text="{i18n>masterSort2}"/>
				</Select>

				<!-- complex sort/group/filter with ViewSettingsDialog -->
				<OverflowToolbarButton
					text="{i18n>MasterListFilterButtonOverflowText}"
					id="filter"
					icon="sap-icon://filter"
					press="onOpenViewSettings"/>

				<Select
					id="groupSelect"
					type="IconOnly"
					icon="sap-icon://group-2"
					autoAdjustWidth="true"
					change="onGroup">
					<core:Item
						id="masterGroupNone"
						key="None"
						text="{i18n>masterGroupNone}"/>
					<core:Item
						id="masterGroup1"
						key="Group1"
						text="{i18n>masterGroup1}"/>
				</Select>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>
